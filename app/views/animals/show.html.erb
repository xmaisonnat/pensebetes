<div class="container">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <%= cl_image_tag @animal.photo, crop: :fill %>
            </div>
            <div class="carousel-item">
                <img src="https://images.unsplash.com/photo-1462218503178-e822ff881c43?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://grandbaby-cakes.com/wp-content/uploads/2015/06/Balsamic-Brown-Sugar-Lamb-Chops-1.jpg" class="d-block w-100" alt="...">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="description rows d-flex mt-4">
        <div class="colums col-6">
            <h1>
                <%= @animal.name %>
                </h1>
                <br>
                <h5>
                <%= @animal.race %>
                </h5>
                <br>
                <%= @animal.description %>
        </div>
        <div>
          <h3>Geocoding</h3>
          <div
            id="map"
            style="width: 100%;
            height: 600px;"
            data-markers="<%= @markers.to_json %>"
            data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
          ></div>
            <!-- <img src="https://www.google.com/maps/vt/data=iLUTdmnVGS3wwR-86uNffTTtfDTfBjfawaFu2PC-AmYcKW0owfivq8qOfkemEZzUf0lJL58PJQQqr56DPon_P_3d4oE6jJ3eYD4F5Fjr3_G76aROPsKttBTNN5FUdUBmX-Ej72ofyPvjvX7mqVAlhGikX-ElD1g6jGAdkdsiTglC5KgiMhIUyURpnLuJPXAOfPik_JmEuJ7rda-yd_QQejkTXRtNSw" alt=""> -->
        </div>
    </div>
    <br>
    <div class="container">
        <div class="form-wrapper ">
            <!--  <h4>Dates : </h4> -->
            <h3>Sélectionne moi</h3>
            <%= simple_form_for [@animal, @reservation] do |t| %>
            <%= t.input :start_date, as: :string, input_html: {id: "start_date"}, label: "Du" %> <br>
            <%= t.input :end_date, as: :string, input_html: {id: "end_date"}, label: "Au" %> <br>
            <%= t.submit "Retour", class: "btn btn-back" %>
            <%= t.submit "Bêeee", class: "btn btn-rent" %>
            <% end %>
        </div>
    </div>

</div>
</div>
</div>
</div>
