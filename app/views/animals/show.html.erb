<div class="container">

    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <%= cl_image_tag @animal.photo, crop: :fill %>
            </div>
            <div class="carousel-item">
                <img src="https://images.unsplash.com/photo-1462218503178-e822ff881c43?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://grandbaby-cakes.com/wp-content/uploads/2015/06/Balsamic-Brown-Sugar-Lamb-Chops-1.jpg" class="d-block w-100" alt="...">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>

    </div>
    <div class="description rows d-flex mt-4">
        <div class="colums col-6">
            <h1>
                <%= @animal.name %>
                </h1>
                <br>
                <h5>
                <%= @animal.race %>
                </h5>
                <br>
                <%= @animal.description %>
        </div>
        <div>
          <h3>Adresse :</h3>
          <div
            id="map"
            style="width: 600px;
            height: 600px;"
            data-markers="<%= @markers.to_json %>"
            data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
          ></div>
        </div>
    </div>
    <br>
    <div class="rows">
        <div class="d-flex justify-content-between">
          <%= simple_form_for(@reservations) do |f| %>
            <%= link_to 'back', animals_path, class: "btn btn-primary mx-3 mb-5 py-2" %>
          <%= link_to 'rent', reservations_path, method: :create, class: "btn btn-success mx-3 mb-5 px-5 py-2" %>
          <% if current_user == @animal.user %>
              <%= link_to "Supprimer", animal_path(@animal), class: "btn btn-danger mx-3 mb-5 px-5 py-2",
                                      method: :delete,
                                      data: { confirm: "Voulez-vous vraiment tuer?" } %>
          <% end %>
          <% end %>
        </div>
    </div>
</div>
