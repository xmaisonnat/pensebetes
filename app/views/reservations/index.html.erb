<div class="container">

  <% @reservations.each do |reservation| %>

    <div class="card-container">
      <div class="animal-card my-4">
        <div class="card-category2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path reservation.animal.photo%>')">
        <h2 class="text-center"> <%= link_to "#{reservation.animal.name}", animal_path(reservation.animal) %> </h2>
        </div>

        <br>
        <div class="card-category-infos"/>
        <h5><%= reservation.status %></h5>
          <div class="form-inline">
            <label for="exampleFormControlTextarea1" spaceholder="Leave a message for the owner about your needs"></label>
            <textarea class="" id="exampleFormControlTextarea1" rows="3"></textarea>
          </div>
          <div class="animal-buttons">

            <% if reservation.pending? %>
              <%= link_to "Confirmer", accept_animal_reservation_path(reservation.animal, reservation), method: :patch, class: "btn btn-rent my-3" %>
              <%= link_to "Supprimer", decline_animal_reservation_path(reservation.animal, reservation), method: :patch, class: "btn btn-danger my-3" %>
              <% elsif reservation.validated?%>
              <%= link_to "Supprimer", decline_animal_reservation_path(reservation.animal, reservation), method: :patch, class: "btn btn-danger my-3" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  <% end %>
</div>

